{
  "name": "nice/twig",
  "description": "Integrates Twig with Nice PHP framework",
  "license": "MIT",
  "require": {
    "php": ">=5.4.0",
    "nice/templating": "1.0.x-dev",
    "twig/twig": "~1.15",
    "symfony/config": "~2.3",
    "symfony/dependency-injection": "~2.3"
  },
  "require-dev": {
    "phpunit/phpunit": "~3.7",
    "symfony/http-kernel": "~2.3",
    "nice/framework": "1.0.x-dev"
  },
  "autoload": {
    "psr-4": {
      "Nice\\Tests\\": "tests/",
      "Nice\\": "src/"
    }
  },
  "extra": {
    "branch-alias": {
      "dev-master": "2.0-dev"
    }
  },
  "minimum-stability": "beta",
  "prefer-stable": true
}
